<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">
    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/persion_foreground"
            android:layout_marginTop="230dp"
            />

        <TextView
            android:id="@+id/dbname"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="230dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout02"
        android:layout_below="@id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffff"
        >
        <ImageView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:src="@drawable/share_foreground"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="61dp"
            android:src="@drawable/lichsu_foreground" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/favorit_foreground"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout03"
        android:background="#ffff"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Chia sẻ"
            android:layout_marginLeft="40dp"

            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lịch sử cuộc gọi"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Yêu thích"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout04"
        android:layout_below="@+id/layout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/dbstd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/dbstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout05"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="40dp"
            android:id="@+id/dbdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout06"
        android:layout_below="@+id/layout05"
        >
        <TextView
            android:id="@+id/dbstd2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã từ chối"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout06"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:textSize="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Chặn"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</RelativeLayout>